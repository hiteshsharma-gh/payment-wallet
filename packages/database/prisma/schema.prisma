generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id        String      @unique @default(uuid())
  name      String?
  email     String      @unique
  password  String?
  verified  Boolean     @default(false)
  auth_type AuthType
  type      AccountType
  Token     Token[]
}

model Token {
  id                    String  @unique @default(uuid())
  access_token          String
  refresh_token         String
  refresh_token_version Int     @default(0)
  accountId             String
  account               Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
}

enum AccountType {
  User
  Merchant
}

enum AuthType {
  Credentials
  Google
}
