generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id       String      @id @default(uuid())
  email    String      @unique
  password String?
  authType AuthType
  verified Boolean     @default(false)
  type     AccountType
  token    Token?
  user     User?
  merchant Merchant?
}

model User {
  id        String  @id @default(uuid())
  name      String?
  account   Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId String  @unique
}

model Merchant {
  id              String  @id @default(uuid())
  name            String?
  account         Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId       String  @unique
  businessName    String
  businessAddress String?
}

model Token {
  id           String   @id @default(uuid())
  sessionToken String
  refreshToken String
  expiresAt    DateTime
  version      Int      @default(0)
  account      Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  accountId    String   @unique
}

enum AuthType {
  Google
  Email
}

enum AccountType {
  User
  Merchant
}
